<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:layout_height="match_parent"
    tools:context=".signup">


    <androidx.appcompat.widget.Toolbar
        android:background="#216582"
        app:titleTextColor="#ffffff"
        app:title="Sign up"
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
        android:background="#216582"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:textSize="26dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="12dp"
            android:text="Create new Account"
            android:fontFamily="sans-serif-thin"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>


    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview_account_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:src="@drawable/noimageprofile"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp">
        </de.hdodenhof.circleimageview.CircleImageView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:layout_alignTop="@id/imageview_account_profile"
            android:src="@drawable/ic_baseline_create_24"
            android:layout_alignEnd="@+id/imageview_account_profile"
            android:layout_marginBottom="100dp"
            android:id="@+id/floatingActionButton">
        </com.google.android.material.floatingactionbutton.FloatingActionButton>
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:textColorHint="#9A9A9A"
        android:layout_width="match_parent"
        android:id="@+id/names"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        android:layout_marginLeft="24dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_marginRight="24dp"
        app:startIconDrawable="@drawable/ic_baseline_person_outline_24"
        app:boxBackgroundColor="@color/cardview_light_background"

        android:layout_marginTop="12dp">
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:inputType="textWebEmailAddress"
            android:layout_height="wrap_content"
            android:hint="Name">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:textColorHint="#9A9A9A"
        android:layout_width="match_parent"
        android:id="@+id/emails"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        android:layout_marginLeft="24dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_marginRight="24dp"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        app:boxBackgroundColor="@color/cardview_light_background"

        android:layout_marginTop="12dp">
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:inputType="textWebEmailAddress"
            android:layout_height="wrap_content"
            android:hint="Email">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:textColorHint="#9A9A9A"
                android:layout_width="match_parent"
                android:id="@+id/phones"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"

                android:layout_marginLeft="24dp"
                style="@style/LoginTextInputLayoutStyle"
                android:layout_marginRight="24dp"
                app:startIconDrawable="@drawable/ic_baseline_local_phone_24"
                app:boxBackgroundColor="@color/cardview_light_background"
                android:layout_marginTop="12dp">
                <EditText
                    android:maxLength="11"
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:inputType="textWebEmailAddress"
                    android:layout_height="wrap_content"
                    android:hint="Phone">
                </EditText>
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
        android:textColorHint="#9A9A9A"
        android:layout_width="match_parent"
        android:id="@+id/addresss"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="24dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_marginRight="24dp"
        app:startIconDrawable="@drawable/ic_baseline_add_location_alt_24"
        app:boxBackgroundColor="@color/cardview_light_background"
        android:layout_marginTop="12dp">
        <EditText
            android:maxLength="11"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:inputType="textWebEmailAddress"
            android:layout_height="wrap_content"
            android:hint="Address">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:textColorHint="#9A9A9A"
        android:layout_width="match_parent"
        android:id="@+id/passs"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:passwordToggleEnabled="true"
        android:layout_marginLeft="24dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_marginRight="24dp"
        app:startIconDrawable="@drawable/ic_baseline_vpn_key_24"
        app:boxBackgroundColor="@color/cardview_light_background"

        android:layout_marginTop="12dp">
        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:inputType="textWebEmailAddress"
            android:layout_height="wrap_content"
            android:hint="Password">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:textColorHint="#9A9A9A"
        android:layout_width="match_parent"
        android:id="@+id/confirmpasss"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:passwordToggleEnabled="true"
        android:layout_marginLeft="24dp"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_marginRight="24dp"
        app:startIconDrawable="@drawable/ic_baseline_vpn_key_24"
        app:boxBackgroundColor="@color/cardview_light_background"
        android:layout_marginTop="12dp">
        <EditText
            android:id="@+id/confirmpass"
            android:layout_width="match_parent"
            android:inputType="textWebEmailAddress"
            android:layout_height="wrap_content"
            android:hint="Confirm Password">
        </EditText>
    </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:textColor="#000000"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Select gender"
                android:fontFamily="sans-serif-thin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

            <RadioGroup
                android:id="@+id/radiogender"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />

            </RadioGroup>

            <TextView
                android:textColor="#000000"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:fontFamily="sans-serif-thin"
                android:text="Select disability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
.            </TextView>

            <RadioGroup
                android:id="@+id/radiotype"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/dumb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dumb" />

                <RadioButton
                    android:id="@+id/deaf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deaf" />


                <RadioButton
                    android:id="@+id/both"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Both" />

            </RadioGroup>



<!--    <Spinner-->
<!--        android:layout_marginLeft="24dp"-->
<!--        android:layout_marginRight="24dp"-->
<!--        android:layout_marginTop="8dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->
<!--    </Spinner>-->

    <Button
        app:cornerRadius="18dp"
        android:text="Register"
        android:backgroundTint="#283361"
        android:layout_margin="32dp"
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>