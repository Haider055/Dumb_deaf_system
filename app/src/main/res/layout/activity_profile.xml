<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.profile">

    <androidx.appcompat.widget.Toolbar
        android:background="@color/toolcolor"
        app:title="Profile"
        android:id="@+id/tool"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:titleTextColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/fragment"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:background="@color/cardview_light_background"
                    android:layout_width="match_parent"
                    android:layout_height="170dp">

                    <LinearLayout
                        android:background="@color/toolcolor"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="85dp">
                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1.1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="170dp">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageview_account_profile"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/noimageprofile"
                                app:civ_border_color="#FFFFFF"
                                app:civ_border_width="2dp">
                            </de.hdodenhof.circleimageview.CircleImageView>
                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:fabSize="mini"
                                android:layout_alignTop="@id/imageview_account_profile"
                                android:src="@drawable/ic_baseline_create_24"
                                android:layout_alignEnd="@+id/imageview_account_profile"
                                android:layout_marginBottom="100dp"
                                android:id="@+id/floatingActionButton">
                            </com.google.android.material.floatingactionbutton.FloatingActionButton>
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:textColor="#000000"
                    android:text="Name"
                    android:fontFamily="@font/abhaya_libre"
                    android:textSize="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_marginLeft="8dp"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginLeft="12dp"
                            android:drawableLeft="@drawable/ic_baseline_person_24"
                            android:drawablePadding="16dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/name"
                            android:text="Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1.4"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--                <View-->
                        <!--                    android:background="#9A9A9A"-->
                        <!--                    android:layout_width="1dp"-->
                        <!--                    android:layout_height="match_parent">-->
                        <!--                </View>-->
                        <!--                <TextView-->
                        <!--                    android:text="Edit"-->
                        <!--                    android:textSize="14sp"-->
                        <!--                    android:layout_margin="8dp"-->
                        <!--                    android:layout_width="wrap_content"-->
                        <!--                    android:layout_height="wrap_content">-->
                        <!--                </TextView>-->
                        <TextView
                            android:layout_margin="8dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/nameupdate"
                            android:gravity="center"
                            android:text="Edit"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="25dp">
                        </TextView>
                    </RelativeLayout>
                </LinearLayout>
                    </LinearLayout>

                <View
                    android:background="#f8f4f3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </View>
                <TextView
                    android:textColor="#000000"
                    android:text="Address"
                    android:fontFamily="@font/abhaya_libre"
                    android:textSize="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginLeft="8dp"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginLeft="12dp"
                            android:drawableLeft="@drawable/ic_baseline_place_24"
                            android:drawablePadding="16dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/address"
                            android:text="Address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1.4"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!--                <View-->
                        <!--                    android:background="#9A9A9A"-->
                        <!--                    android:layout_width="1dp"-->
                        <!--                    android:layout_height="match_parent">-->
                        <!--                </View>-->
                        <!--                <TextView-->
                        <!--                    android:text="Edit"-->
                        <!--                    android:textSize="14dp"-->
                        <!--                    android:layout_margin="8dp"-->
                        <!--                    android:layout_width="wrap_content"-->
                        <!--                    android:layout_height="wrap_content">-->
                        <!--                </TextView>-->
                        <TextView
                            android:layout_margin="8dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/addressupdate"
                            android:gravity="center"
                            android:text="Edit"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="25dp">
                        </TextView>
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:background="#f8f4f3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </View>
                <TextView
                    android:textColor="#000000"
                    android:text="Phone"
                    android:fontFamily="@font/abhaya_libre"
                    android:textSize="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginLeft="8dp"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginLeft="12dp"
                            android:drawablePadding="16dp"
                            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                            android:layout_centerVertical="true"
                            android:id="@+id/phone"
                            android:text="Phone No"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1.4"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
