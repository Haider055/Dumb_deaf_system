                        <!--                    android:textSize="14dp"-->
                        <!--                    android:layout_margin="8dp"-->
                        <!--                    android:layout_width="wrap_content"-->
                        <!--                    android:layout_height="wrap_content">-->
                        <!--                </TextView>-->
                        <TextView
                            android:layout_margin="8dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/phoneupdate"
                            android:gravity="center"
                            android:text="Edit"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="25dp">
                        </TextView>
                    </RelativeLayout>

                </LinearLayout>


                <View
                    android:background="#f8f4f3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </View>
                <TextView
                    android:textColor="#000000"
                    android:text="Password"
                    android:fontFamily="@font/abhaya_libre"
                    android:textSize="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_marginLeft="8dp"
                        android:layout_weight="0.6"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:layout_marginLeft="12dp"
                            android:drawableLeft="@drawable/ic_baseline_lock_24"
                            android:drawablePadding="16dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/password"
                            android:text="Password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </TextView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1.4"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_margin="8dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/passwordupdate"
                            android:gravity="center"
                            android:text="Edit"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="25dp">
                        </TextView>                    </RelativeLayout>
                </LinearLayout>


                <View
                    android:background="#f8f4f3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </View>
                <TextView
                    android:textColor="#000000"
                    android:text="Gender"
                    android:fontFamily="@font/abhaya_libre"
                    android:textSize="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <TextView
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:layout_marginLeft="12dp"
                                android:drawablePadding="16dp"
                                android:drawableLeft="@drawable/ic_baseline_gender_24"
                                android:layout_centerVertical="true"
                                android:id="@+id/gender"
                                android:text="Gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1.4"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_margin="8dp"
                                android:layout_centerInParent="true"
                                android:id="@+id/genderupdate"
                                android:gravity="center"
                                android:text="Edit"
                                android:textColor="#000000"
                                android:layout_width="match_parent"
                                android:layout_height="25dp">
                            </TextView>
                        </RelativeLayout>
                    </LinearLayout>


                <View
                    android:background="#f8f4f3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp">
                </View>

                <TextView
                    android:textColor="#000000"
                    android:text="Disability type"
                    android:fontFamily="@font/abhaya_libre"
                    android:textSize="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_weight="0.6"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">
                            <TextView
                                android:textColor="#000000"
                                android:textSize="16sp"
                                android:layout_marginLeft="12dp"
                                android:drawablePadding="16dp"
                                android:drawableLeft="@drawable/ic_baseline_disable_wifi_24"
                                android:layout_centerVertical="true"
                                android:id="@+id/type"
                                android:text="Type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            </TextView>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1.4"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_margin="8dp"
                                android:layout_centerInParent="true"
                                android:id="@+id/typeupdate"
                                android:gravity="center"
                                android:text="Edit"
                                android:textColor="#000000"
                                android:layout_width="match_parent"
                                android:layout_height="25dp">
                            </TextView>
                        </RelativeLayout>
                    </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>




</LinearLayout>